{{#partial "content"}}

    <h1>Place list!</h1>

    {{#if places}}
        {{#each places }}
         <div class="emphasized well">
            <p>Place {{id}}:</p>
               <ul>
                   <li>{{name}}</li>
                   <li>{{location}}</li>
                   <li>{{dateVisited}}</li>
                   <li>Created At: {{createdAt}}</li>
               </ul>
            <p>{{ name }} <a href="/places/{{id}}">read more...</a></p>
         </div>
        {{/each}}
    {{else}}
        <p>No place added!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}
