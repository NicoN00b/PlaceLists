{{#partial "content"}}

   {{#if editPlace}}
       <h1>Edit this entry!</h1>
       <form action="/places/{{editPlace.id}}/update" method="post">
        <div class="form-control">
           <label for="name">Edit this place's name</label>
           <input id="name" name="name" type="text" value="{{editPlace.name}}">
        </div>
        <div class="form-control">
          <label for="location">Edit this place's location</label>
          <input id="location" name="location" type="text" value="{{editPlace.location}}">
       </div>
       <div class="form-control">
          <label for="date">Edit the date that you visited this place</label>
          <input id="date" name="date" type="text" value="{{editPlace.date}}">
       </div>

   {{else}}
   <h1>Add a new entry!</h1>

   <form action="/places/new" method="post">
       <div class="form-control">
          <label for="name">This place's name</label>
          <input id="name" name="name" type="text">
       </div>
       <div class="form-control">
         <label for="location">This place's location</label>
         <input id="location" name="location" type="text">
       </div>
       <div class="form-control">
         <label for="date">The date that you visited this place</label>
         <input id="date" name="date" type="text">
       </div>
   {{/if}}
       <button type="submit" class="btn btn-default">Go!</button>
   </form>
{{/partial}}

{{> layout.hbs}}